<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleLoginUI.Views.Dashboard.PostingDetailsPage"
             Title="Posting Details Page">
    
    <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">
        <VerticalStackLayout>
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label Style="{StaticResource MediumLabel}" Text="{Binding PostingDetail.Pickup}" />
                <Label Style="{StaticResource MediumLabel}" Text="{Binding PostingDetail.Dropoff}" />
                <Label Style="{StaticResource MediumLabel}" Text="{Binding PostingDetail.PostingType}" />
                <Label Style="{StaticResource MediumLabel}" Text="{Binding PostingDetail.LoadType}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>